{
  "compilerOptions": {
    /* ------------------ comportament standard Next.js ------------------ */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],

    /* ------------------ aliasul `@/` ------------------ */
    "baseUrl": ".",               // pornește căutarea din rădăcina repo-ului
    "paths": {
      "@/*": ["./*", "./src/*"]   // permite importul din orice subfolder
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
